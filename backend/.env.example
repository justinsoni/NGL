# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/football-league-hub
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/football-league-hub

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (Brevo - Primary)
# Get your API key from https://app.brevo.com/settings/keys
BREVO_API_KEY=xkeysib-your-brevo-api-key-here
# This email must be verified in your Brevo dashboard (Settings -> Senders)
BREVO_SENDER_EMAIL=justinsony2000@gmail.com

# Email Configuration (Gmail - Fallback)
# 1. Enable 2FA on your Google account
# 2. Go to Security -> 2-Step Verification -> App passwords
# 3. Create a 16-character app password
EMAIL_USER=justinsony2000@gmail.com
EMAIL_PASSWORD=replace-with-your-gmail-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
